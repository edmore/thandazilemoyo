/*
 * Import nib
 */
@import 'nib'

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #FFF
background-color = #FFF

body
  font-family 'Palatino'
  background-color background-color
  color #444
  margin: 20px auto;
  width: 960px;

header
  font-family 'Palatino'
  margin-bottom 100px
  color #000
  width 100%
  overflow hidden
  padding-bottom 10px

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  text-shadow 0px -1px 0px darken(main-color, 30%)

  h1
    float left
    font-size 40px
    font-style italic

.left-content
  float left;
  width 70%;
  font-size 20px;

  a
    background-color: black;
    color: white;
    padding: 3px;
    width: auto;

.right-content
  float right
  width 20%
  font-size 20px

  p
    margin-bottom 20px

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Palatino'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 40px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

.links
  list-style none

  a
    background-color: black;
    color: white;
    padding: 3px;
    width: auto;
    text-decoration: none;

  li
    margin-bottom 15px
    cursor: hand
    cursor: pointer


footer
  width 70%
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 20px
  clear both

.sidebar {
    position:fixed;
    top:100px;
    background-color:#FFF;
    padding:20px;
}

